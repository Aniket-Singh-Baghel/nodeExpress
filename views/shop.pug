extends layouts/layout.pug 

block content 
    main
            if prods.length>0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            </header>
                            .card__image
                                img(src="https://static.vecteezy.com/system/resources/thumbnails/019/900/152/small_2x/old-book-watercolor-illustration-png.png" alt="A Book")
                            .card__content
                                h2.product__price $19.99
                                p.product__description #{product.desc}
                            .card__actions
                                button.btn Add to Cart
            else 
                h1 No Products